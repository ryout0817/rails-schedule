<header>
  <h1>Ruby on Rails スケジュール管理アプリ</h1>
</header>
<body>
<h2>スケジュール新規作成</h2>

<%= render "shared/error", obj: @user %>

<%= form_with model: @user do |f| %>

<table border="1">
  <tr>
    <th class="column"><%= f.label :title,"タイトル" %></th>
    <td class="command"><%= f.text_field :title, size:"35"%></td>
  </tr>
  <tr>
    <th class="column"><%= f.label :start_day,"開始日" %></th>
    <td class="command"><%= f.datetime_field :start_day %></td>
  </tr>

  <tr>
    <th class="column"><%= f.label :finish_day,"終了日" %></th>
    <td class="command"><%= f.datetime_field :finish_day %></td>†
  </tr>

  <tr>
    <th class="column"><%= f.label :all_day,"終日" %></th>
    <td class="command"><%= f.check_box :all_day %><br>終日の場合はチェック</td>
  </tr>
  <tr>
    <th class="new_introduction"><%= f.label :introduction,"スケジュールメモ" %></th>
    <td class="command"><%= f.text_area :introduction,size: "35x13" %></td>
  </tr>
  
</table>

<div>
  <ul>
    <li><%= f.submit"新規登録完了する"%></li>
    <li><%= link_to"ユーザー情報一覧に戻る",:users %></li>
  </ul>
</div>
<% end %>
</body>

<%= render"shared/footer"%>